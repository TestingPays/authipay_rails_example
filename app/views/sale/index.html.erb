<div class="container">
  <div class="row">
    <div class="col-4 mx-auto pt-5 mt-5">

      <%= form_tag("/sale", method: "post") do %>
        <div class="form-group">
          <label>Card Number</label>
          <input name="card_number" class="form-control" value="4111111111111111" />
        </div>

        <div class="form-group">
          <label>Expiry Month</label>
          <input name="expiry_month" class="form-control" value="02" />
        </div>

        <div class="form-group">
          <label>Expiry Year</label>
          <input name="expiry_year" class="form-control" value="22" />
        </div>

        <div class="form-group">
          <label>CVV</label>
          <input name="card_code" class="form-control" value="222" />
        </div>

        <div class="form-group">
          <label>Amount</label>
          <input name="charge_total" class="form-control" value="20.00" />
        </div>

        <div class="text-center">
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      <% end %>

    </div>
  </div>
</div>
